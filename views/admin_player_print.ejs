<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Printable Report – <%= user.name %></title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    @media print {
      .topbar, .btn { display:none !important; }
      body { background:#fff; color:#000; }
      .card { box-shadow:none; border:1px solid #ccc; }
    }
    .plain { background:#fff; color:#000; }
    .plain .card { background:#fff; color:#000; }
  </style>
</head>
<body class="plain">
  <header class="topbar">
    <div class="left"><h1>Printable Player Report</h1></div>
    <div class="right">
      <button class="btn" onclick="window.print()">Print</button>
    </div>
  </header>

  <main class="container">
    <div class="card">
      <h2><%= user.name %></h2>
      <p><%= user.email %></p>
      <% if (assignment) { %>
        <p>Start date: <%= start_date %> | Current week: <%= currentWeek %></p>
      <% } %>
    </div>

    <div class="card">
      <h3>Current Week Dates</h3>
      <ul>
        <% weekDates.forEach((d, idx)=> { %>
          <li><%= ['Mon','Tue','Wed','Thu','Fri','Sat','Sun'][idx] %> — <%= d %></li>
        <% }) %>
      </ul>
    </div>

    <div class="card">
      <h3>Recent Notes</h3>
      <% if (notes.length === 0) { %><p>No notes.</p><% } else { %>
        <ul>
          <% notes.forEach(n => { %>
            <li><strong><%= n.date %>:</strong> <%= n.note %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </main>
</body>
</html>
